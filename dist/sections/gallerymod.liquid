<div class="gallery section-standard {% unless section.settings.section_padding %}no-border{% endunless %}" data-section-id="{{ section.id }}" data-section-type="gallery-section">
  <div class="{% if section.settings.full_width %}contain-full-width{% else %}contain-site-width{% endif %} {% unless section.settings.section_padding %}no-padding{% endunless %}">
    <div class="wrapper">
      {% if section.settings.title != blank %}
        <header>
          <h4>{{ section.settings.title | escape }}</h4>
        </header>
      {% endif %}
      <div class="flexgrid">
        {% for block in section.blocks limit: section.blocks.size %}
	{% if forloop.index == 2 %}
		<div class="wrap">
	{% endif %}

            {% include 'image-grid-item', text_placement: section.settings.text_placement, zoom: section.settings.zoom, full_width: section.settings.full_width %}
	{% if forloop.index == 4 %}
		</div>
	{% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gallery Mod",
  "class": "gallery-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image Gallery"
    },

    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Expand full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "section_padding",
      "label": "Show spacing around section",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "gutter",
      "label": "Show spacing around images",
      "default": true
    },
    {
      "type": "range",
      "id": "images_per_row_range",
      "label": "Targetted images per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "radio",
      "id": "text_placement",
      "label": "Text placement",
      "default": "below",
      "options": [
        {
          "value": "below",
          "label": "Below image"
        },
        {
          "value": "over",
          "label": "Over image"
        }
      ]
    },
    {
      "type": "color",
      "id": "color_overlay",
      "label": "Overlay",
      "default": "#4f4f4f"
    },
    {
      "type": "color",
      "id": "color_overlay_hover",
      "label": "Overlay hover",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "color_overlay_text",
      "label": "Overlay text",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "color_overlay_alpha_range",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Image overlay opacity",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "zoom",
      "label": "Enable rollover zoom",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_rollover",
          "label": "Rollover image",
          "info": "Optional - Rollover image should be the same size as the image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "Image",
      "settings": {
        "title": "",
        "full_width": true,
        "section_padding": false,
        "images_per_row_range": 4,
        "gutter": false,
        "text_placement": "over"
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
